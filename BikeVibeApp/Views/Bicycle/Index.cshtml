@model IEnumerable<BikeVibeApp.Models.Bicycle>


@{
    ViewData["Title"] = "Customers";
}

<h1>Bicycles</h1>

<p>
    <a asp-action="New" class="btn btn-primary">New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DailyRentalRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dateadded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BicycleTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @item.Name
            </td>
            <td>
                @item.DailyRentalRate
            </td>
            <td>
                @item.Size
            </td>
            <td>
                 @item.Dateadded
            </td>
            <td>
                @item.NumberInStock
            </td>
            <td>
                @item.BicycleType.Name
            </td>
            <td>
                @item.Brand.Name
            </td>
            <td><a asp-action="Edit" asp-route-id="@(item.Id)">Edit</a></td>
        </tr>
}
    </tbody>
</table>
