@model IEnumerable<BikeVibeApp.Models.Brand>

@{
    ViewData["Title"] = "Brands";
}

<h1>Brands</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @item.Name
            </td>
            <td><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
        </tr>
}
    </tbody>
</table>
